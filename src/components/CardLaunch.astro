---
interface Props {
  id: string;
  img: string;
  success: boolean;
  flightNumber: number;
  details: string | null;
}

const { success, flightNumber, img, id, details } = Astro.props;
const successText = success ? "Success" : "Fail";
---

<a href={`/launch/${id}`}>
  <picture>
    <img src={img} alt={`Here is the img of ${id}`} />
  </picture>
  <p># Flight: {flightNumber}</p>
  <span
    class:list={[
      "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
      {
        "bg-green-400 text-green-900": success,
        "bg-red-400 text-red-900": !success,
      },
    ]}
  >
    {successText}
  </span>
  {
    details ? (
      <>
        <p>Details:</p>
        <p>{details}</p>
      </>
    ) : (
      ""
    )
  }
</a>
