---
import Section from "../layouts/Section.astro";
import { getStack } from "../services/stack";

const stack = getStack();
---

<Section title="Stack" idSection="stack" alternative>
  <div class="waveTextAnimated">
    {
      stack.map(({ name, color }) => (
        <span
          style={`box-shadow: 0 0 10px 20px ${color}; background-color: ${color}`}
        >
          {name}
        </span>
      ))
    }
  </div>
</Section>

<style>
  .waveTextAnimated {
    margin-top: 0.6em;
    font-size: 50px;
    text-align: center;
  }

  .waveTextAnimated span {
    display: inline-block;
    -webkit-animation: wave-text 1s ease-in-out infinite;
    animation: wave-text 1s ease-in-out infinite;
    padding: 20px;
  }

  .waveTextAnimated span:nth-of-type(1) {
    -webkit-animation-delay: 0s;
    animation-delay: 0s;
  }
  .waveTextAnimated span:nth-of-type(2) {
    -webkit-animation-delay: 0.1s;
    animation-delay: 0.1s;
  }
  .waveTextAnimated span:nth-of-type(3) {
    -webkit-animation-delay: 0.2s;
    animation-delay: 0.2s;
  }
  .waveTextAnimated span:nth-of-type(4) {
    -webkit-animation-delay: 0.3s;
    animation-delay: 0.3s;
  }
  .waveTextAnimated span:nth-of-type(5) {
    -webkit-animation-delay: 0.4s;
    animation-delay: 0.4s;
  }

  @-webkit-keyframes wave-text {
    00% {
      transform: translateY(0em);
    }
    60% {
      transform: translateY(-0.6em);
    }
    100% {
      transform: translateY(0em);
    }
  }

  @keyframes wave-text {
    00% {
      transform: translateY(0em);
    }
    60% {
      transform: translateY(-0.6em);
    }
    100% {
      transform: translateY(0em);
    }
  }
</style>
