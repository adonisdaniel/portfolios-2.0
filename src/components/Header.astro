---
import HeaderButton from "./HeaderButton.astro";
---

<header class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:py-6">
  <div class="text-center flex">
    <a href="/">
      <img
        src="https://adonisdaniel.github.io/images/logo.png"
        alt="adonis-logo"
        class="astro-a"
      />
    </a>
    <h1 class="text-white text-6xl font-bold">
      Hello <span class="underline hover:underline-offset-4">netizen!</span>
    </h1>
  </div>

  <nav
    class="flex flex-col text-white justify-between w-full text-center md:flex-row"
  >
    <HeaderButton href="/">
      <svg
        slot="before"
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-apps"
        width="44"
        height="44"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="#2c3e50"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path
          d="M4 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"
        ></path>
        <path
          d="M4 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"
        ></path>
        <path
          d="M14 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"
        ></path>
        <path d="M14 7l6 0"></path>
        <path d="M17 4l0 6"></path>
      </svg>
       Projects
    </HeaderButton>
    <HeaderButton href="/">
      <svg
        slot="before"
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-stack-2"
        width="44"
        height="44"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="#2c3e50"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M12 4l-8 4l8 4l8 -4l-8 -4"></path>
        <path d="M4 12l8 4l8 -4"></path>
        <path d="M4 16l8 4l8 -4"></path>
      </svg>
       Stack
    </HeaderButton>
    <HeaderButton href="/">
      <svg
        slot="after"
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-message"
        width="44"
        height="44"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="#2c3e50"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M8 9h8"></path>
        <path d="M8 13h6"></path>
        <path
          d="M18 4a3 3 0 0 1 3 3v8a3 3 0 0 1 -3 3h-5l-5 3v-3h-2a3 3 0 0 1 -3 -3v-8a3 3 0 0 1 3 -3h12z"
        ></path>
      </svg>
       Contact
    </HeaderButton>
    <HeaderButton href="/about">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-info-square-rounded"
        slot="after"
        width="44"
        height="44"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="#2c3e50"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M12 9h.01"></path>
        <path d="M11 12h1v4h1"></path>
        <path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z"
        ></path>
      </svg>
       About
    </HeaderButton>
  </nav>
</header>
